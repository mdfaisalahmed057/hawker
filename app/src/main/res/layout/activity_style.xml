<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".style">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="297dp"
      android:layout_height="350dp"
      android:layout_marginBottom="284dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.368"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/userwithlocation" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="1dp"
      android:fontFamily="@font/aref_ruqaa"
      android:text="Login   For   user"
      android:textColor="#191717"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.071"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.538" />


  <Button
      android:id="@+id/btn_logins"
      android:layout_width="293dp"
      android:layout_height="56dp"
       android:backgroundTint="#FB515C"
      android:text="Conitnue"
      android:textColor="@android:color/white"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.418"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintVertical_bias="0.53" />

  <EditText
      android:id="@+id/editText"
      android:layout_width="296dp"
      android:layout_height="68dp"
      android:layout_marginTop="20dp"
      android:hint="Enter Your Name here"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.373"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />


  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@drawable/dashed_line"
      app:layout_constraintBottom_toTopOf="@+id/btn_logins"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editText" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="193dp"
      android:layout_height="62dp"
      android:fontFamily="@font/aref_ruqaa"
      android:text="By continuing,you agree to our
terms of services privacy policy"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.417"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintVertical_bias="0.458" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="208dp"
      android:layout_height="68dp"
      android:fontFamily="@font/aref_ruqaa"
      android:text="India's First Platform For
Hawker"
      android:textAlignment="center"
      android:textColor="#191717"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.374"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView2"
      app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>