<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".style">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="303dp"
        android:layout_height="110dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/aref_ruqaa"
        android:text="Create Your Account For Free"
        android:textAlignment="center"
        android:textColor="#191717"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_logins"
        android:layout_width="293dp"
        android:layout_height="56dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#FB515C"
        android:text="Login For Hawker"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_logins3"
        android:layout_width="293dp"
        android:layout_height="56dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#FB515C"
        android:text="Login For User"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintBottom_toTopOf="@+id/btn_logins"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/aref_ruqaa"
        android:text="By continuing,you agree to our
terms of services privacy policy"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logins"
        app:layout_constraintVertical_bias="0.809" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="339dp"
        android:layout_height="247dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/createaccount" />


</androidx.constraintlayout.widget.ConstraintLayout>